<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.pku.kingarcher.wefund.fragment.BaseDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"/>
        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="32dp"
            android:gravity="center"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:rowCount="3"
        android:columnCount="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/price"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="2" />
        <TextView
            android:id="@+id/rate"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2" />
        <TextView
            android:text="收益率"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="基金公司"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="基金经理"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/overflow"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/company"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/manager"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">
        <GridLayout
            android:id="@+id/fund_base"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/base_name"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/base_code"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/base_price"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/base_rate"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
        </GridLayout>
        <GridLayout
            android:id="@+id/fund_b"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/b_name"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/b_code"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/b_price"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/b_rate"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"/>
        </GridLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
