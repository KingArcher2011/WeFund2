<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.pku.kingarcher.wefund.fragment.BaseDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="32dp"
            android:gravity="center"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:rowCount="3"
        android:columnCount="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/price"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="2" />
        <TextView
            android:id="@+id/rate"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:paddingLeft="16dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2" />
        <TextView
            android:id="@+id/special"
            android:layout_gravity="fill"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="基金公司"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="基金经理"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/overflow"
            android:layout_gravity="fill"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/company"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="italic"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:id="@+id/manager"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="italic"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">
        <GridLayout
            android:id="@+id/left_fund"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="#FFCFCFCF"
            android:rowCount="2"
            android:columnCount="2"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/left_name"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/left_code"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/left_price"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/left_rate"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
        </GridLayout>
        <GridLayout
            android:id="@+id/right_fund"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="#FFCFCFCF"
            android:rowCount="2"
            android:columnCount="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/right_name"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/right_code"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/right_price"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/right_rate"
                android:layout_gravity="fill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"/>
        </GridLayout>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabBackground="?attr/colorAccent"
        app:tabIndicatorColor="#FFFFFFFF"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="#BFFFFFFF"
        app:tabSelectedTextColor="#FFFFFFFF"
        app:tabPaddingStart="12dp"
        app:tabPaddingEnd="12dp"
        app:tabPaddingBottom="5dp"
        app:tabTextAppearance="?android:attr/textAppearanceSmall"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>